{
   "compilerOptions": {
     "target": "es6",
     "module": "commonjs",
     "lib": [
       "dom",
       "es6",
       "es2017",
       "esnext.asynciterable"
     ],
     "sourceMap": true,
     "outDir": "./dist",
     "moduleResolution": "node",
     "removeComments": true,
     "noImplicitAny": true,
     "strictNullChecks": true,
     "strictFunctionTypes": true,
     "noImplicitThis": true,
     // "noUnusedLocals": true,
     "noUnusedParameters": true,
     "noImplicitReturns": true,
     "noFallthroughCasesInSwitch": true,
     "allowSyntheticDefaultImports": true,
     "esModuleInterop": true,
     "emitDecoratorMetadata": true,
     "experimentalDecorators": true,
     "resolveJsonModule": true,
     "baseUrl": ".",
     "paths": {
      "@modules/*": ["rest/modules/*"],
      "@errorHandlers/*": ["src/errorHandlers/*"],
      "@controller/*": ["src/controller/*"],
      "@routes/*": ["src/routes/*"],
      "@services/*": ["src/services/*"],
      "@utils/*": ["src/utils/*"],
      "@validation-rules/*": ["src/validation-rules/*"],
      "@model/*": ["src/model/*"], 
      "@httpCodes/*": ["src/httpCodes/*"],
      "@config/*": ["src/config/*"],
      "@entity/*": ["src/entity/*"],
      "@middleware/*": ["src/middleware/*"],
      "@repository/*": ["src/repository/*"],
      "data-source": ["src/data-source"],
      "server": ["src/server"],
      "logger": ["src/logger"]
    }
   },
   "exclude": [
     "node_modules", 
   ],

   "typeRoots": ["./global.d.ts", "./node_modules/@types"],
 
   "include": [
     "./src/**/*.tsx",
     "./src/**/*.ts",
     "src/index.ts", "src/global.d.ts", 
    "src/test/*.test.ts" ]
 }